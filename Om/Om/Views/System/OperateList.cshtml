                            <td>@item.ModuleOperateId</td>
                            <td class="text-l">@item.ModuleOperateName</td>
                            <td>@item.JsEvent</td>
                            <td><i class="Hui-iconfont">@Html.Raw(item.Icon)</i></td>
                            @if (item.Enabled == 1)
                            {
                                <td>显示</td>
                            }
                            else
                            {
                                <td>隐藏</td>
                            }

